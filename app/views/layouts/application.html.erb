<!DOCTYPE html>
<html>
<head>
  <title>Bucketlister</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if false %><!-- commented out for dev ease -->
  <div id="info-bar"> 
    <div class="side-pads">
      <div id="title-box">
        <h2>BUCKETLISTr</h2>
        <div class="circle" style="background-image: url('https://graph.facebook.com/counterbeing/picture?width=200&height=200');"></div>
      </div><!-- end #title box -->
      <div id="stats-box">
        <span class="stat">XNumber</span>
        <a href="/auth/facebook" id="fb_login_link">Login with Facebook</a>
      </div><!-- end #stats-box -->
    </div><!-- end side-pads -->
  </div>
<% end %>
   
  <div id="container">
    <%= yield %>
  </div>

</body>
</html>

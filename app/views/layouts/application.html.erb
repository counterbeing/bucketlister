<!DOCTYPE html>
<html>
<head>
  <title>Bucketlister</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <link href="/stylesheets/screen.css" media="screen, projection" rel="stylesheet" type="text/css" />
  <link href="/stylesheets/print.css" media="print" rel="stylesheet" type="text/css" />
  <!--[if IE]>
      <link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
      <![endif]-->
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="info-bar"> 
    <div class="side-pads">
      <div id="title-box">
        <h2>BUCKETLISTr</h2>
        <div class="circle" style="background-image: url('https://graph.facebook.com/counterbeing/picture?width=200&height=200');"></div>
      </div><!-- end #title box -->
      <div id="stats-box">
        <span class="stat">XNumber</span>
        <a href="/auth/facebook" id="fb_login_link">Login with Facebook</a>
      </div><!-- end #stats-box -->
    </div>
  </div>
   
  <div id="container">
    <%= yield %>
  </div>

</body>
</html>
